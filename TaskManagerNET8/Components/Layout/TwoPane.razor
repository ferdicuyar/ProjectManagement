@inherits LayoutComponentBase
<div class="@($"two-pane {(sidebarOpen ? "is-open" : null)}")">
    <div class="mobile-bar">
        <button class="toggle" @onclick="ToggleSidebar" aria-expanded="@sidebarOpen">
            Calendar
        </button>
    </div>

    <main class="content">
        @Main
    </main>

    <aside class="sidebar" role="complementary">
        @Sidebar
    </aside>
</div>

@code {
    [Parameter] public RenderFragment? Main { get; set; }
    [Parameter] public RenderFragment? Sidebar { get; set; }
    private bool sidebarOpen;

    void ToggleSidebar() => sidebarOpen = !sidebarOpen;
}
