@page "/TheSystem/Users"
@inject ISessionStorageService session
@inject NavigationManager nav
@inject ILoginService userService
@rendermode InteractiveServer

@code {
    SessionModel mySession;
    List<User> users;
    User newUser;
    string password = "";
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Task.Delay(300);
            mySession = await session.GetItemAsync<SessionModel>("login");
            if (mySession?.TheUser?.UserName == null)
            {
                nav.NavigateTo("/");
                return;
            }
            else
            {
                users = userService.GetUsers();
            }
            StateHasChanged();
        }
    }

    void OpenNewUserPanel(int userId)
    {
        if (userId == 0)
        {
            newUser = new User() { Deleted = false };
        }
        else
        {
            newUser = users.FirstOrDefault(x => x.Id == userId);
        }
    }

    void AddorUpdateUser()
    {
        users = userService.AddUser(newUser,password);
        CloseNewUserPanel();
    }

    void CloseNewUserPanel()
    {
        password = "";
        newUser = null;
    }
}

@if (mySession != null)
{
    <TopNav UserId="@mySession.TheUser.Id" />
}

<TwoPane>
    <Main>
        <div class="row">
            <div class="col-12 table table-responsive">
                <button class="btn btn-success" @onclick="@(() => OpenNewUserPanel(0))">New User</button>
                <hr />
                @if (users != null)
                {
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>User Name</th>
                                <th>Long Name</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (User item in users)
                            {
                                <tr>
                                    <td>@item.UserName</td>
                                    <td>@item.LongName</td>
                                    <td><button class="btn btn-warning" @onclick="@(() => OpenNewUserPanel(item.Id))">Update</button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </Main>
    <Sidebar>
        <MiniCalendar />
    </Sidebar>
</TwoPane>

@if (newUser != null)
{
    <div class="modal d-block" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@((newUser.Id == 0) ? "Add New User" : "Update User")</h5>
                    <button type="button" class="close" @onclick="CloseNewUserPanel" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <EditForm Model="@newUser" OnSubmit="AddorUpdateUser">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="username">User Name:</label>
                            <InputText class="form-control" id="username" @bind-Value="newUser.UserName" />
                        </div>
                        @if (newUser.Id == mySession.TheUser.Id || newUser.Id == 0)
                        {
                            <div class="form-group">
                                <label for="password">Password:</label>
                                <InputText type="password" class="form-control" id="password" @bind-Value="@password" />
                            </div>
                        }
                        <div class="form-group">
                            <label for="longname">Long Name:</label>
                            <InputText class="form-control" id="longname" @bind-Value="newUser.LongName" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" @onclick="CloseNewUserPanel">Cancel</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}