@page "/TheSystem/Technologies"
@inject ISessionStorageService session
@inject NavigationManager nav
@inject IProjectService projectService
@rendermode InteractiveServer

@code {
    SessionModel mySession;
    List<Technology> techs;
    Technology newTech;
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Task.Delay(300);
            mySession = await session.GetItemAsync<SessionModel>("login");
            if (mySession?.TheUser?.UserName == null)
            {
                nav.NavigateTo("/");
                return;
            }
            else
            {
                techs = projectService.GetTechs();
            }
            StateHasChanged();
        }
    }

    void OpenNewTechPanel(int techId)
    {
        if (techId == 0)
        {
            newTech = new Technology();
        }
        else
        {
            newTech = techs.FirstOrDefault(x => x.Id == techId);
        }
    }

    void AddorUpdateTech()
    {
        techs = projectService.AddTechs(newTech);
        CloseNewTechPanel();
    }

    void CloseNewTechPanel()
    {
        newTech = null;
    }
}

@if (mySession != null)
{
    <TopNav UserId="@mySession.TheUser.Id" />
}

<TwoPane>
    <Main>
        <div class="row">
            <div class="col-12 table table-responsive">
                <button class="btn btn-success" @onclick="@(() => OpenNewTechPanel(0))">New Technology</button>
                <hr />
                @if (techs != null)
                {
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Technology Name</th>
                                <th>Technology Description</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Technology item in techs)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td><button class="btn btn-warning" @onclick="@(() => OpenNewTechPanel(item.Id))">Update</button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </Main>
    <Sidebar>
        <MiniCalendar />
    </Sidebar>
</TwoPane>

@if (newTech != null)
{
    <div class="modal d-block" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@((newTech.Id == 0) ? "Add New Technology" : "Update Technology")</h5>
                    <button type="button" class="close" @onclick="CloseNewTechPanel" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <EditForm Model="@newTech" OnSubmit="AddorUpdateTech">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="username">Title:</label>
                            <InputText class="form-control" id="username" @bind-Value="newTech.Title" />
                        </div>
                        <div class="form-group">
                            <label for="longname">Description:</label>
                            <InputText class="form-control" id="longname" @bind-Value="newTech.Description" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" @onclick="CloseNewTechPanel">Cancel</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}